  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "simple-git": "^3.28.0",
    "marked": "^12.0.1",
    "highlight.js": "^11.10.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^10.0.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0-rc.12",
    "@google/generative-ai": "^0.3.0",
    "ws": "^8.18.0",
    "express-rate-limit": "^7.3.1",
    "puppeteer": "^24.9.0",
    "docx": "^8.5.0",
    "helmet": "^8.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
